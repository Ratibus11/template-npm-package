{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",

		"baseUrl": ".",
		"outDir": "app",

		"declaration": true,
		"declarationMap": false,
		"declarationDir": "types",
		"removeComments": false,

		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitUseStrict": true,

		"paths": {
			"@src/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
