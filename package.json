{
    "private": true,
    "name": "template-npm-package",
    "displayName": "TEMPLATE - NPM package",
    "description": "Basic template for NPM packages with TypeScript, Gulp and Mocha/Chai.js.",
    "version": "1.0.0",
    "keywords": [
        "template",
        "typescript",
        "gulp",
        "mocha",
        "chaijs"
    ],
    "license": "SEE IN LICENSE",
    "author": {
        "email": "bastian.lucas@icloud.com",
        "name": "Lucas Bastian",
        "url": "https://ratibus11.github.io"
    },
    "homepage": "https://github.com/Ratibus11/template-npm-package",
    "bugs": "https://github.com/Ratibus11/template-npm-package/issues",
    "main": "app/main.js",
    "types": "types/main.d.ts",
    "scripts": {
        "prepare": "ts-patch install -s",
        "build": "gulp build",
        "test": "ts-mocha -r tsconfig-paths/register -p tsconfig.test.json tests/API/**/*.ts",
        "prepublishOnly": "npm i && npm run build && npm run test"
    },
    "devDependencies": {
        "@types/chai": "^4.3.3",
