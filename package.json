        "gulp-minify": "^3.1.0",
        "gulp-rename": "^2.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "merge2": "^1.4.1",
        "ts-mocha": "^10.0.0",
        "ts-patch": "^2.0.2",
        "tsconfig-paths": "^4.1.0",
        "typescript-transform-paths": "^3.4.4"
